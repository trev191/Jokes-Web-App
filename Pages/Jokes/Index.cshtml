@page
@model JokesWebApp.Pages.Jokes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Jokes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Question: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].JokeQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].JokeAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Joke[0].Creator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Joke) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JokeAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
